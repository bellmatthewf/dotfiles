{
    // Base VSCode
    "workbench.startupEditor": "none",
    "workbench.colorTheme": "Monokai",
    "workbench.iconTheme": "Monokai Classic Icons",
    "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
    "javascript.format.insertSpaceAfterConstructor": true,
    "jupyter.alwaysTrustNotebooks": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    // Apply formatter extension (vetur formatter, editor config)
    // Equivalent to pressing
    // Shift + Option + F before saving
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "editor.formatOnSave": true,
    "editor.bracketPairColorization.enabled": true,
    // VSCode ESLint - autoapply fix lint on save
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true,
        "source.organizeImports": true
    },
    // Code Runner Extension
    "code-runner.executorMap": {
        "python": "python $fullFileName"
    },
    "code-runner.enableAppInsights": false,
    "code-runner.showExecutionMessage": false,
    "code-runner.clearPreviousOutput": true,
    "code-runner.saveAllFilesBeforeRun": true,
    "code-runner.runInTerminal": true,
    // Git
    "git.autofetch": true,
    // VSCode Python
    "python.formatting.provider": "black",
    "python.languageServer": "Pylance",
    "python.analysis.typeCheckingMode": "basic",
    "python.showStartPage": false,
    "python.linting.enabled": true,
    "python.terminal.activateEnvironment": false,
    // Vetur Extension
    // Watch for conflicts with ESLint if you turn this on
    // "vetur.experimental.templateInterpolationService": true,
    "vetur.format.defaultFormatter.js": "vscode-typescript",
    "vetur.format.defaultFormatter.ts": "none",
    "vetur.validation.templateProps": true,
    "vetur.format.options.useTabs": false,
    "vetur.format.options.tabSize": 4,
    "vetur.ignoreProjectWarning": true,
    // Import Cost Extension
    "importCost.timeout": 1000000,
    "prettier.tabWidth": 4,
    "prettier.useTabs": false,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "[markdown]": {
        "editor.wordWrap": "wordWrapColumn",
        "editor.wordWrapColumn": 80
    },
    "security.workspace.trust.untrustedFiles": "open",
    "emmet.includeLanguages": {
        "javascript": "javascriptreact"
    },
    "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[vue]": {
        // "editor.defaultFormatter": "octref.vetur"
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "typescript.updateImportsOnFileMove.enabled": "always",
    "window.zoomLevel": 1,
    // Helps in typescript+react to let you CMD+Click into custom components
    "editor.gotoLocation.multipleDefinitions": "goto"
}
